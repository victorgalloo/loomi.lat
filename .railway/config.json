{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "packages/temporal-workers/Dockerfile",
    "watchPatterns": ["packages/temporal-workers/**"]
  },
  "deploy": {
    "startCommand": "node dist/worker.js",
    "restartPolicyType": "ON_FAILURE"
  }
}
